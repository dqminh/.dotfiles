Config { font = "xft:SauceCodePro Nerd Fonts:size=10:antialias=true"
    , additionalFonts = []
    , borderColor = "#1c2023"
    , border = TopB
    , bgColor = "#1c2023"
    , fgColor = "#c7ccd1"
    , alpha = 255
    , position = Top
    , textOffset = -1
    , iconOffset = -1
    , lowerOnStart = True
    , pickBroadest = False
    , persistent = False
    , hideOnStart = False
    , iconRoot = "."
    , allDesktops = True
    , overrideRedirect = True
    , commands = [ Run Battery ["-t","bat: <left>"] 10
      , Run Date "%a %b %_d %Y %I:%M:%S" "date" 1
      , Run StdinReader
      ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %StdinReader%} {%date% <fc=#aec795>/</fc> %battery% "

